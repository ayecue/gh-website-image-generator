{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "outDir": "dist",
      "sourceMap": true,
      "rootDir": "src",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "declaration": true,
      "downlevelIteration": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }